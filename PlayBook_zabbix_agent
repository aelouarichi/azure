- name: Azure Playbook
  hosts: all
  become: yes
  become_method: sudo

  tasks:
    - name: Installer les packages
      yum: 
        name: "{{ item }}" 
        state: latest
      with_items:
        - zabbix-agent
        
    - name: Activer zabbix-agent
      service:
        name: zabbix-agent
        enabled: yes
        state: started
